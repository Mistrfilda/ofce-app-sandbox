{
	"name": "ofce/app-sandbox",
	"description": "Standar ofce sandbox",
	"keywords": ["nette"],
	"type": "project",
	"license": ["MIT", "BSD-3-Clause", "GPL-2.0", "GPL-3.0"],
	"require": {
		"php": ">= 7.1",
		"nette/application": "^3.0",
		"nette/bootstrap": "^3.0",
		"nette/caching": "^3.0",
		"nette/database": "^3.0",
		"nette/di": "^3.0",
		"nette/finder": "^2.5",
		"nette/forms": "^3.0",
		"nette/http": "^3.0",
		"nette/mail": "^3.0",
		"nette/robot-loader": "^3.0",
		"nette/security": "^3.0",
		"nette/utils": "^3.0",
		"latte/latte": "^2.5",
		"tracy/tracy": "^2.6",
		"contributte/console": "^0.5.0",
	  	"nettrine/orm": "dev-master",
	  	"nettrine/dbal": "dev-master as 0.3.0",
		"nettrine/migrations": "dev-next",
	  	"ublaboo/datagrid": "^6.0"
	},
	"require-dev": {
		"nette/tester": "^2.0",
		"jakub-onderka/php-parallel-lint": "^1.0",
		"phpstan/phpstan": "^0.11.5",
		"phpstan/phpstan-nette": "^0.11.0",
		"phpstan/phpstan-doctrine": "^0.11.2",
	  	"phpstan/phpstan-strict-rules": "^0.11.0",
		"symplify/easy-coding-standard": "^5.4",
		"roave/security-advisories": "dev-master"
	},
	"autoload": {
		"classmap": ["src/Booting.php"],
	  	"psr-4": {
			"App\\": "src"
	  	}
	},
  	"autoload-dev": {
		"psr-4": {
	  		"App\\": "src"
		}
  	},
  	"scripts": {
	  "clear": "rm -rf temp/cache/*",
	  "stan": "vendor/bin/phpstan analyse -l 7 -c phpstan.neon src --ansi",
	  "lint": "vendor/bin/parallel-lint --colors src/",
	  "sniffer": "vendor/bin/ecs check src --ansi",
	  "fix": "vendor/bin/ecs check src --fix --ansi",
	  "build-all": "composer lint && composer stan && composer sniffer"
	},
	"minimum-stability": "dev",
  	"prefer-stable":  true
}
